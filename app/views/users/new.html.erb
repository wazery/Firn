<section class="signup-section">

	<h1 id="signup-title">SIGN UP</h1>

	<%if not flash[:notice].blank? %> 
		<div class="invalid_notice">
			<p><%=flash[:notice]%></p>
		</div>
	<%end%>

	<%= form_for(:user, url: users_path) do |f| %>
		<%= f.text_field :username, :placeholder => "Enter your user name", :class => "username-label" %>

		<%= f.text_field :email, :placeholder => "Enter your email address", :class => "email-label" %>

		<span class="email-icon"></span>

		<%= f.password_field :password, :placeholder => "Enter your password", :class => "password-label" %>

		<%= f.password_field :password_confirmation, :placeholder => "Cofnirm your password", :class => "password-confirm-label" %>

		<span class="password-icon"></span>

		<%= f.submit "SIGN UP", :class => "signup-button" %>
    <% end %>

	<div class="social-signup">
		<% if not current_user %>
		<%= link_to "Sign up with Facebook", "/auth/facebook", {class: "signup-fb facebook-btn"} %>
		<% end %>

		<% if not current_user %>
		<%= link_to "Sign up with Twitter", "/auth/facebook", {class: "signup-twitter twitter-btn"} %>
		<% end %>
	</div

    <%if flash[:notice]%> 
    	<div class="invalid_notice">
    	<p><%=flash[:notice]%></p>
    	</div>
    <%end%>

</section>