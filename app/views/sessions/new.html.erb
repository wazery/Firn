<section class="login-section">

	<h1 id="login-title">LOG IN</h1>

    <%if flash.now[:notice]%> 
    	<div class="invalid_notice">
    	<p><%=flash.now[:notice]%></p>
    	</div>
    <%end%>

	<%= form_for(:session, url: sessions_path) do |f| %>
		<%=f.text_field :email, :placeholder => "Enter your email address", :class => "username-label" %>

		<span class="email-icon"></span>

		<%= f.password_field :password, :placeholder => "Enter your password", :class => "password-label" %>

		<span class="password-icon"></span>

		<%= f.submit "LOG IN", :class => "login-button" %>
    <% end %>

	<div class="social-signup">
		<span class="facebook-btn login-fb">
			<%= link_to "Log in with Facebook", "/auth/facebook" %>
			<i class="fa fa-facebook-square"></i>
		</span>
		<span class="twitter-btn login-twitter">
			<%= link_to "Log in with Twitter", "/auth/facebook" %>
			<i class="fa fa-twitter-square"></i>
		</span>
	</div>

	<%= link_to "Need to sign up?", "signup", :id => "need-signup" %>
	<%= link_to "Forgot your password?", "/forgot_password", :id => "forgot-password" %>

</section>
