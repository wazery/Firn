<section class="login-section">

	<h1 id="login-title">LOG IN</h1>

	<%if not flash[:notice].blank? %> 
		<div class="invalid_notice">
			<p><%=flash[:notice]%></p>
		</div>
	<%end%>

	<%= form_for(:session, url: sessions_path) do |f| %>
		<%=f.text_field :username, :placeholder => "Enter your user name", :class => "username-label" %>

		<span class="email-icon"></span>

		<%= f.text_field :password, :placeholder => "Enter your password", :class => "password-label" %>

		<span class="password-icon"></span>

		<%= f.submit "LOG IN", :class => "login-button" %>
    <% end %>

	<div class="login-fb">
		<% if not current_user %>
		<%= link_to "Log in with Facebook", "/auth/facebook", id: "sign_in" %>
		<% end %>
	</div>

	<% if not current_user %>
	<%= link_to "Log in with Twitter", "/auth/facebook", class: "login-twitter" %>
	<% end %>

	<a id="need-signup" href="/#signup">Need to sign up?</a>
	<a id="forgot-password" href="/forgot_password">Forgot your password?</a>
    
    <%if flash[:notice]%> 
    	<div class="invalid_notice">
    	<p><%=flash[:notice]%></p>
    	</div>
    <%end%>

</section>

</body>
</html>
